{
  "compilerOptions": {
    "target": "ES2022",               
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",              
    "moduleResolution": "bundler",     
    "jsx": "react-jsx",
    "noEmit": true,                 
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "incremental": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src/**/*", 
    "../shared/**/*"
  ]
}