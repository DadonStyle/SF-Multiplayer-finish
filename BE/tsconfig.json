{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "commonjs", 
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true ,
  },
  "include": [
    "src/**/*",
    "../shared/**/*"
  ]
}